@import "../../../common/vendor.wxss";

page {
  background-color: #fff;
}
.invite-btn {
  margin: 30rpx 16rpx;
}
.userlist-wrap {
  margin-top: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.userlist-wrap .userlist-item-wrap {
  border-top: 2rpx solid #eee;
}
.userlist-wrap .userlist-item-wrap .userlist-item {
  padding: 24rpx 30rpx;
  font-size: 32rpx;
}
.collapse-body {
  font-size: 30rpx;
}
.collapse-body .content-item {
  margin-top: 10rpx;
}
.collapse-body .content-item.btn-wrap {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.collapse-body .content-item .item-title {
  width: 140rpx;
}
.zan-cell {
  display: block;
}
.user_status_icon {
  display: inline-block;
  color: green;
  vertical-align: middle;
  border-radius: 8rpx;
  font-size: 26rpx;
  height: 30rpx;
  padding: 0 10rpx;
  line-height: 30rpx;
}
.user_status_icon.for_audit {
  padding: 4rpx 14rpx;
  margin: 0 14rpx;
  color: white;
  background-color: #E64340;
}
.user_status_icon.admin {
  color: purple;
}
.user_status_icon.checker {
  color: orange;
}
.user_status_icon.writer {
  color: gold;
}
.user_status_icon.common {
  color: pink;
}