<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>resource</display-name>
    <!-- 加载spring配置文件 -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <!-- 加载log4j的配置文件log4j.properties -->
    <context-param>
        <param-name>log4jConfigLocation</param-name>
        <param-value>classpath:log4j.properties</param-value>
    </context-param>

    <!-- 设定刷新日志配置文件的时间间隔，这里设置为10s -->
    <context-param>
        <param-name>log4jRefreshInterval</param-name>
        <param-value>10000</param-value>
    </context-param>

    <!-- 为避免项目间冲突，定义唯一的 webAppRootKey -->
    <context-param>
        <param-name>webAppRootKey</param-name>
        <param-value>scheduleProject</param-value>
    </context-param>
    <!-- 小程序url都经过此拦截器 -->
    <filter>
        <filter-name>wxLoginFilter</filter-name>
        <filter-class>com.grosup.ttzy.filter.WxLoginFilter</filter-class>
        <init-param>
            <param-name>excludeurls</param-name>
            <param-value>*/sso/*,*/image/*,*/js/*,*/css/*,*/pages/login/*,*.html,*.png,*.jpg</param-value>
        </init-param>
    </filter>
    <!-- 小程序url都经过此拦截器 -->
    <filter>
        <filter-name>securityFilter</filter-name>
        <filter-class>com.grosup.ttzy.filter.SecurityFilter</filter-class>
        <init-param>
            <param-name>excludeurls</param-name>
            <param-value>*/sso/*,*/image/*,*/js/*,*/css/*,*/pages/login/*,*.html,*.png,*.jpg</param-value>
        </init-param>
    </filter>
    
<!--     PC url都经过此拦截器 -->
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>com.grosup.ttzy.filter.LoginFilter</filter-class>
        <init-param>
            <param-name>excludeurls</param-name>
            <param-value>*/sso/*,*/image/*,*/js/*,*/css/*,*/pages/login/*,*.html,*/wx/*,*.png,*.jpg,*/login/*,*/Redirect,*/rs/*</param-value>
        </init-param>
    </filter>


    <!-- <context-param> -->
    <!-- <param-name>log4jConfigLocation</param-name> -->
    <!-- <param-value>classpath:log4j.properties</param-value> -->
    <!-- </context-param> -->
    <!-- <context-param> -->
    <!-- <param-name>log4jRefreshInterval</param-name> -->
    <!-- <param-value>6000</param-value> -->
    <!-- </context-param> -->

    <!-- 配置字符乱码 -->
    <filter>
        <filter-name>SpringCharacterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>SpringCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- 小程序url都经过此拦截器 -->
    <filter-mapping>
        <filter-name>wxLoginFilter</filter-name>
        <url-pattern>/wx/*</url-pattern>
    </filter-mapping>
    <!-- 小程序url都经过此拦截器 -->
    <filter-mapping>
        <filter-name>securityFilter</filter-name>
        <url-pattern>/wx/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/aa/*</url-pattern>
    </filter-mapping>

     <!-- 加载Spring框架中的log4j监听器Log4jConfigListener -->
    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>

    <listener>
        <listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
    </listener>
    
    <!-- 加载springmvc servlet -->
    <servlet>
        <servlet-name>resource</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:applicationContext.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>resource</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
</web-app>