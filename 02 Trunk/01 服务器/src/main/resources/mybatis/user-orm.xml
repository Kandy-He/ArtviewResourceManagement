	<select id="getUserInfo" parameterType="map" resultType="com.grosup.ttzy.beans.UserBean">
       select * from t_user 
       <where>
           <if test="openId != null and openId != ''">
               openId = #{openId}
           </if>
       </where>
    </select>
    <!-- 人员注册 -->
    <insert id="userAdd" parameterType="com.grosup.ttzy.beans.UserBean">
        insert into t_user (uid,openId,nickName,roleKey,createTime,lastTime,status)
        values (#{uid},#{openId},#{nickName},#{roleKey},#{createTime},#{lastTime},#{status})
    </insert>
</mapper>