@import "../../../common/vendor.wxss";

page {
  background-color: #fff;
}
.invite-btn {
  margin: 30rpx 16rpx;
}
.userlist-wrap {
  margin-top: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.userlist-wrap .userlist-item-wrap {
  border-top: 2rpx solid #eee;
}
.userlist-wrap .userlist-item-wrap .userlist-item {
  padding: 24rpx 30rpx;
  font-size: 32rpx;
}
.collapse-body {
  font-size: 30rpx;
  magin-bottom: 16rpx;
}
.collapse-body .content-item {
  margin-top: 10rpx;
}
.collapse-body .content-item.btn-wrap {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}
.collapse-body .content-item .item-title {
  width: 140rpx;
}
.zan-cell {
  display: block;
}
.user_status_icon {
  display: inline-block;
  color: green;
  vertical-align: middle;
  border-radius: 8rpx;
  font-size: 26rpx;
  height: 30rpx;
  padding: 0 10rpx;
  line-height: 30rpx;
}
.user_status_icon.for_audit {
  padding: 4rpx 14rpx;
  margin: 4rpx 14rpx;
  color: white;
  background-color: #E64340;
}
.user_status_icon.for_clear_auth_button {
  padding: 4rpx 14rpx;
  margin: 8rpx 14rpx;
  color: white;
  background-color: #E64340;
}
.refuse-input {
  font-size: 30rpx;
  color: #000;
  height: 96rpx;
  width: 512rpx;
  padding: 0 10rpx;
  border: 2rpx solid #999999;
  maxlength: 64rpx;
  fixed: true;
}
.space {
  height: 32rpx;
  margin: 0 16rpx;
}
.roleKey-image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 8rpx;
}
.user-info {
  width: 528rpx;
  word-break: break-all;
}
.refuse-reason-title {
  height: 96rpx;
  text-align: right;
  vertical-align: top;
  margin-left: 32rpx;
  margin-bottom: 8rpx;
}