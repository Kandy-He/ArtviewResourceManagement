@import "../../../../common/vendor.wxss";

page {
  background-color: #fff;
}
.audit-btn {
  display: inline-block;
  vertical-align: middle;
  border-radius: 8rpx;
  font-size: 30rpx;
  height: 60rpx;
  padding: 0 30rpx;
  line-height: 60rpx;
}
.audit-btn.for-ok {
  color: white;
  background-color: #67c23a;
}
.audit-btn.for-modify {
  color: white;
  background-color: #f6923c;
}
.audit-btn.for-refuse {
  color: white;
  background-color: #f56c6c;
  margin-right: 0;
}
.audit-input {
  font-size: 26rpx;
  height: 96rpx;
  width: 512rpx;
  padding: 0 10rpx;
  line-height: 36rpx;
  border: 2rpx solid #999999;
  maxlength: 64rpx;
  fixed: true;
  color: #000;
}
.audit-input-title {
  padding-top: 0;
  margin-top: 0;
  height: 96rpx;
  text-align: right;
  vertical-align: top;
}
.space {
  margin: 0 16rpx;
}
.line-block {
  width: 100%;
  margin: 32rpx 0;
}
.line-fill {
  width: 100%;
  padding: 16rpx 0;
}
.content-item {
  padding: 16rpx 0;
  font-size: 30rpx;
}
.resourcelist-wrap {
  margin-bottom: 24rpx;
}
.resourcelist-item-wrap {
  padding-bottom: 24rpx;
  margin: 0 32rpx;
  border-bottom: 2rpx solid #f56c6c;
}
.attr-type {
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #E64340;
}
.resource-name {
  padding: 16rpx 0;
  font-size: 40rpx;
}
.resource-image {
  width: 200rpx;
  height: 200rpx;
}